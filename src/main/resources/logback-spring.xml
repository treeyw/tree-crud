<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 日志存放文件夹 -->
    <springProperty scope="context" name="CERT_PATH" source="logging.filepath"
                    defaultValue="/home/javaData/logs/"/>
    <springProperty scope="context" name="LINK_CLAZZ" source="logging.link_clazz"
                    defaultValue="ConsoleLinkLogUtil"/>
    <springProperty scope="context" name="MESSAGE_CLAZZ" source="logging.message_clazz"
                    defaultValue="ConsoleMessageLogUtil"/>
    <springProperty scope="context" name="SAVE_DAY" source="logging.savedays"
                    defaultValue="100000"/>
    <springProperty scope="context" name="SQL_LV" source="logging.sql"
                    defaultValue="ERROR"/>

    <!-- 控制台打印日志的相关配置 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- 日志格式 -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%level] [%class:%line] - %m%n</pattern>
        </encoder>
        <!-- 日志级别过滤器 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <!-- 过滤的级别 -->
            <!-- <level>DEBUG</level> -->
            <!-- 匹配时的操作：接收（记录） -->
            <onMatch>ACCEPT</onMatch>
            <!-- 不匹配时的操作：拒绝（不记录） -->
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- 文件保存日志的相关配置 -->
    <appender name="FILEOUT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 保存日志文件的路径 -->
        <file>${CERT_PATH}info/interFace.log</file>
        <!-- 日志格式 -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%level] [%class:%line] - %m%n</pattern>
        </encoder>
        <!-- 日志级别过滤器 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <!-- 过滤的级别 -->
            <!-- <level>INFO</level>-->
            <!-- 匹配时的操作：接收（记录） -->
            <onMatch>ACCEPT</onMatch>
            <!-- 不匹配时的操作：拒绝（不记录） -->
            <onMismatch>DENY</onMismatch>
        </filter>
        <!-- 循环政策：基于时间创建日志文件 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 日志文件名格式 -->
            <fileNamePattern>${CERT_PATH}/info/%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- 最大保存时间：5天-->
            <maxHistory>${SAVE_DAY}</maxHistory>
        </rollingPolicy>
    </appender>
    <!-- 文件保存日志的相关配置 -->
    <appender name="LINKLOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 保存日志文件的路径 -->
        <file>${CERT_PATH}link/link.log</file>
        <!-- 日志格式 -->
        <encoder>
            <pattern>%m%n</pattern>ne
        </encoder>
        <!-- 日志级别过滤器 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <!-- 匹配时的操作：接收（记录） -->
            <onMatch>ACCEPT</onMatch>
            <!-- 不匹配时的操作：拒绝（不记录） -->
            <onMismatch>DENY</onMismatch>

        </filter>
        <!-- 循环政策：基于时间创建日志文件 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 日志文件名格式 -->
            <fileNamePattern>${CERT_PATH}link/%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>${SAVE_DAY}</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- 文件保存日志的相关配置 -->
    <appender name="MESSAGELOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 保存日志文件的路径 -->
        <file>${CERT_PATH}message/message.log</file>
        <!-- 日志格式 -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%level] [%class:%line] - %m%n</pattern>
        </encoder>
        <!-- 日志级别过滤器 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <!-- 匹配时的操作：接收（记录） -->
            <onMatch>ACCEPT</onMatch>
            <!-- 不匹配时的操作：拒绝（不记录） -->
            <onMismatch>DENY</onMismatch>

        </filter>
        <!-- 循环政策：基于时间创建日志文件 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 日志文件名格式 -->
            <fileNamePattern>${CERT_PATH}message/%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- 最大保存时间：5天-->
            <maxHistory>${SAVE_DAY}</maxHistory>
        </rollingPolicy>
    </appender>

    <logger name="${LINK_CLAZZ}" level="INFO" additivity="false">
        <appender-ref ref="LINKLOG"/>
    </logger>

    <logger name="${MESSAGE_CLAZZ}" level="INFO" additivity="false">
        <appender-ref ref="MESSAGELOG"/>
    </logger>

    <!-- 基于info处理日志：具体控制台或者文件对日志级别的处理还要看所在appender配置的filter，如果没有配置filter，则使用root配置 -->
    <root level="info">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILEOUT"/>
    </root>
    <logger name="jdbc.connection" level="OFF"/>
    <logger name="jdbc.resultset" level="OFF"/>
    <logger name="jdbc.resultsettable" level="OFF"/>
    <logger name="jdbc.audit" level="OFF"/>
    <logger name="jdbc.sqltiming" level="${SQL_LV}"/>
    <logger name="jdbc.sqlonly" level="OFF"/>
</configuration>
